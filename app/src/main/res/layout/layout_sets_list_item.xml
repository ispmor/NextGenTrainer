<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".kotlin.ui.fitlog.workout.WorkoutsFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/grey_box">
        <TextView
            android:id="@+id/bestSetTextView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/best_workout_badge"
            android:text="@string/best_set"
            android:textColor="@color/gray_black_text"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginEnd="0dp"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exerciseNameTextView"
                android:layout_marginStart="20dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:text="Squats"/>


            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/repsSumTextView"
                        android:layout_marginStart="20dp"
                        android:textSize="28dp"
                        android:textStyle="bold"
                        android:text="100"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/repsTextView"
                        android:layout_marginStart="20dp"
                        android:textSize="14dp"
                        android:text="Reps"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLayoutPassive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/quality1PassiveTextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="20dp"
                                android:background="@drawable/prallelogram_passive"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/quality2PassiveTextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:background="@drawable/prallelogram_passive"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/quality3PassiveTextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:background="@drawable/prallelogram_passive"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/quality4PassiveTextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:background="@drawable/prallelogram_passive"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/quality5PassiveTextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:background="@drawable/prallelogram_passive"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/qualityTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Rep Quality"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginVertical="10dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/quality1TextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="20dp"
                                android:background="@drawable/prallelogram_active"
                                android:textStyle="bold"
                                android:visibility="invisible"/>

                            <TextView
                                android:id="@+id/quality2TextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:background="@drawable/prallelogram_active"
                                android:textStyle="bold"
                                android:visibility="invisible"/>

                            <TextView
                                android:id="@+id/quality3TextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:background="@drawable/prallelogram_active"
                                android:textStyle="bold"
                                android:visibility="invisible"/>

                            <TextView
                                android:id="@+id/quality4TextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:background="@drawable/prallelogram_active"
                                android:textStyle="bold"
                                android:visibility="invisible"/>

                            <TextView
                                android:id="@+id/quality5TextView"
                                android:layout_width="24dp"
                                android:layout_height="36dp"
                                android:background="@drawable/prallelogram_active"
                                android:textStyle="bold"
                                android:visibility="invisible"/>

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>